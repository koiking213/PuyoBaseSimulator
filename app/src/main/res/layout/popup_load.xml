<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/seedTextView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="シード値"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/seedEditTextNumberDecimal"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="6"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/seedTextView"
        app:layout_constraintEnd_toStartOf="@id/searchBySeedButton" />

    <Button
        android:id="@+id/searchBySeedButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="検索"
        android:textSize="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/patternTextView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="ツモ"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/seedTextView"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/patternEditText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="6"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintTop_toBottomOf="@id/seedTextView"
        app:layout_constraintStart_toEndOf="@id/seedTextView"
        app:layout_constraintEnd_toStartOf="@id/searchByPatternButton" />

    <Button
        android:id="@+id/searchByPatternButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="検索"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@id/seedTextView"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/searchByPatternButton"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>