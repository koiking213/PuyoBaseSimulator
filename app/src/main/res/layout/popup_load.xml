<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



    <TextView
        android:id="@+id/seedTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="シード値"
        android:textSize="18sp"></TextView>

    <EditText
        android:id="@+id/seedEditTextNumberDecimal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:ems="6"
        android:inputType="numberDecimal"
        android:hint="0-65536"
        android:autofillHints="0-65535"></EditText>

    <Button
        android:id="@+id/searchBySeedButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="検索"
        android:textSize="12sp"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

    <TextView
        android:id="@+id/patternTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="ツモ"
        android:textSize="18sp"></TextView>

    <EditText
        android:id="@+id/patternEditText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:ems="6"
        android:inputType="textPersonName"
        android:text=""
        android:hint="abac..."
        android:autofillHints="abac..." />

    <Button
        android:id="@+id/searchByPatternButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="検索"
        android:textSize="12sp"></Button>
        </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/patternTextView" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
